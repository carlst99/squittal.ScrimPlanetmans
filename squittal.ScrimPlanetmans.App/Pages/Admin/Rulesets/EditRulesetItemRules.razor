    private async void OnSaveScrimItemRulesEditSubmit(bool isManualClick)
    {
        if (!isManualClick)
        {
            return;
        }

        if (!_changedRules.Any())
            return;

        _isSavingRules = true;
        InvokeAsyncStateHasChanged();

        await RulesetDataService.SaveRulesetItemRules(_renderedRulesetId, _changedRules.Values.AsEnumerable());

        _originalRulePoints.Clear();
        _originalRuleBans.Clear();
        _changedRules.Clear();
        _originalRuleDeferToPlanetsideClasses.Clear();
        _originalRulePlanetsideClassSettings.Clear();
        _changesCount = 0;

        _isSavingRules = false;

        _showReloadRulesPrompt = false;
        await LoadRulesAsync();
    }

    private void OnClearRuleChanges()
    {
        if (!_changedRules.Any() || _itemRules is null ||  !_itemRules.Any())
            return;

        _isClearingRules = true;

        foreach ((uint itemId, int points) in _originalRulePoints)
        {
            RulesetItemRule? itemRule = _itemRules.FirstOrDefault(r => r.ItemId == itemId);
            if (itemRule is not null)
                itemRule.Points = points;
        }

        foreach ((uint itemId, bool isBanned) in _originalRuleBans)
        {
            RulesetItemRule? itemRule = _itemRules.FirstOrDefault(r => r.ItemId == itemId);
            if (itemRule is not null)
                itemRule.IsBanned = isBanned;
        }

        foreach ((uint itemId, bool deferToClass) in _originalRuleDeferToPlanetsideClasses)
        {
            RulesetItemRule? itemRule = _itemRules.FirstOrDefault(r => r.ItemId == itemId);
            if (itemRule is not null)
                itemRule.DeferToPlanetsideClassSettings = deferToClass;
        }

        foreach ((uint itemId, PlanetsideClassRuleSettings classSettings) in _originalRulePlanetsideClassSettings)
        {
            _itemRules.FirstOrDefault(r => r.ItemId == itemId)?
                .SetPlanetsideClassSettings(classSettings);
        }

        _originalRulePoints.Clear();
        _originalRuleBans.Clear();
        _changedRules.Clear();
        _originalRuleDeferToPlanetsideClasses.Clear();
        _originalRulePlanetsideClassSettings.Clear();
        _changesCount = 0;

        _isClearingRules = false;
    }

